<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/image"
        app:layout_constraintBottom_toTopOf="@+id/btnComb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/combination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRotate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/rotate"
        app:layout_constraintEnd_toEndOf="@+id/btnComb"
        app:layout_constraintStart_toStartOf="@+id/btnComb"
        app:layout_constraintTop_toBottomOf="@+id/btnAlpha" />

    <Button
        android:id="@+id/btnScale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/scale"
        app:layout_constraintEnd_toEndOf="@+id/btnComb"
        app:layout_constraintStart_toStartOf="@+id/btnComb"
        app:layout_constraintTop_toBottomOf="@+id/btnRotate" />

    <Button
        android:id="@+id/btnTrans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/translate"
        app:layout_constraintEnd_toEndOf="@+id/btnComb"
        app:layout_constraintStart_toStartOf="@+id/btnComb"
        app:layout_constraintTop_toBottomOf="@+id/btnScale" />

    <Button
        android:id="@+id/btnAlpha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/alpha"
        app:layout_constraintEnd_toEndOf="@+id/btnComb"
        app:layout_constraintStart_toStartOf="@+id/btnComb"
        app:layout_constraintTop_toBottomOf="@+id/btnComb" />

</androidx.constraintlayout.widget.ConstraintLayout>